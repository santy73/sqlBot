# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=dbV2

# Seguridad API
API_SECRET_KEY=samanainn_api_key_2025_secret # Cambiar por una clave segura en producción
JWT_SECRET=samanainn_jwt_secret_2025 # Para implementación futura de JWT

# Configuración de IA Principal
AI_PROVIDER=openai # Opciones: openai, anthropic
AI_API_KEY=your_api_key_here # API Key del proveedor seleccionado

# Configuración específica de OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o # Opciones: gpt-4o, gpt-4-turbo, gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# Configuración específica de Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229 # Opciones: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2048

# Análisis de sentimiento
ENABLE_SENTIMENT_ANALYSIS=true

# Otros ajustes
MAX_CONVERSATION_HISTORY=20
ENABLE_LOGGING=true